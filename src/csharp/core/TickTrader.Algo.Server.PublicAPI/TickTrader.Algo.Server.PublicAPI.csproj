<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="certs\algo-ca.crt" />
    <None Remove="ServerManagement\account.management.proto" />
    <None Remove="ServerManagement\base.request.proto" />
    <None Remove="ServerManagement\connection.management.proto" />
    <None Remove="ServerManagement\package.management.proto" />
    <None Remove="ServerManagement\plugin.files.management.proto" />
    <None Remove="ServerManagement\plugin.management.proto" />
    <None Remove="ServerManagement\subscribes.management.proto" />
    <None Remove="ServerManagement\unsubscribes.management.proto" />
    <None Remove="Structures\account.model.info.proto" />
    <None Remove="Structures\api.metadata.info.proto" />
    <None Remove="Structures\package.info.proto" />
    <None Remove="Structures\plugin.model.info.proto" />
    <None Remove="Structures\server.updates.proto" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="certs\algo-ca.crt" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Google.Protobuf" Version="3.15.5" />
    <PackageReference Include="Grpc" Version="2.36.1" />
    <PackageReference Include="Grpc.Tools" Version="2.36.1">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
    <PackageReference Include="NLog" Version="4.7.7" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\lib\Machinarium\Machinarium.csproj" />
    <ProjectReference Include="..\TickTrader.Algo.Server.Common\TickTrader.Algo.Server.Common.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Protobuf Include="ServerManagement\base.request.proto" GrpcServices="Client" />
    <Protobuf Include="ServerManagement\account.management.proto" GrpcServices="Client" />
    <Protobuf Include="ServerManagement\connection.management.proto" GrpcServices="Client" />
    <Protobuf Include="ServerManagement\subscribes.management.proto" GrpcServices="Client" />
    <Protobuf Include="ServerManagement\package.management.proto" GrpcServices="Client" />
    <Protobuf Include="ServerManagement\plugin.files.management.proto" GrpcServices="Client" />
    <Protobuf Include="ServerManagement\plugin.management.proto" GrpcServices="Client" />
    <Protobuf Include="ServerManagement\unsubscribes.management.proto" GrpcServices="Client">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Protobuf>
    <Protobuf Include="Structures\account.model.info.proto" GrpcServices="Client" />
    <Protobuf Include="Structures\api.metadata.info.proto" GrpcServices="Client" />
    <Protobuf Include="Structures\package.info.proto" GrpcServices="Client" />
    <Protobuf Include="Services\algo.server.publicAPI.proto" GrpcServices="Both" />
    <Protobuf Include="Structures\plugin.model.info.proto" GrpcServices="Client" />
    <Protobuf Include="Structures\server.updates.proto" />
  </ItemGroup>

</Project>
