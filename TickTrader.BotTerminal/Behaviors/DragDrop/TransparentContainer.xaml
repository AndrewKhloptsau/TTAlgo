<Window x:Class="TickTrader.BotTerminal.TransparentContainer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TickTrader.BotTerminal"
        mc:Ignorable="d"
        IsHitTestVisible="False"
        WindowStyle="None"
        AllowsTransparency="True"
        Topmost="True"
        SizeToContent="WidthAndHeight"
        AllowDrop="False"
        ShowInTaskbar="False"
        Background="Transparent"
        Title="TransparentContainer" Height="300" Width="300">
    <ContentPresenter Content="{Binding DragSource, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Window}}"
                      ></ContentPresenter>
</Window>
