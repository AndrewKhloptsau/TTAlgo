<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="DialogLabel_Style" TargetType="Label">
        <Setter Property="Foreground" Value="{DynamicResource Shell_PrimaryForeground}" />
        <Setter Property="Margin" Value="5,4,5,1" />
        <Setter Property="Padding" Value="0"/>
    </Style>

    <Style TargetType="Label" BasedOn="{StaticResource DialogLabel_Style}"/>

    <Style x:Key="DialogPageTitleLabelStyle" BasedOn="{StaticResource DialogLabel_Style}" TargetType="Label">
        <Setter Property="Foreground" Value="{DynamicResource Dialog_ControlBackground}"/>
    </Style>

</ResourceDictionary>