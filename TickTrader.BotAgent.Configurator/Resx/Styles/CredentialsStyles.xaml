<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="CredentialControlPanel" BasedOn="{StaticResource ContentControlPanel}">
        <Setter Property="Control.Height" Value="131"/>
        <Setter Property="Control.Padding" Value="20 0 10 0"/>
        <Setter Property="Control.Margin" Value="0"/>
    </Style>

    <Style x:Key="FirstCredentialControlPanel" BasedOn="{StaticResource CredentialControlPanel}">
        <Setter Property="Control.Padding" Value="20 0 10 0"/>
        <Setter Property="Control.Margin" Value="0 10 0 0"/>
    </Style>
    
    <Style x:Key="CredentialGenerateButton" BasedOn="{StaticResource SecondaryButton}" TargetType="Button">
        <Setter Property="Margin" Value="0"/>
    </Style>
</ResourceDictionary>