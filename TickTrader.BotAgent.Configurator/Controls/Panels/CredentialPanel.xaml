<UserControl x:Class="TickTrader.BotAgent.Configurator.Controls.CredentialPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TickTrader.BotAgent.Configurator"
             mc:Ignorable="d">
    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="70"/>
            <ColumnDefinition Width="190"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.ColumnSpan="2" Text="{Binding Name}" HorizontalAlignment="Center"/>
        <TextBlock Grid.Row="1" Text="Login: "/>
        <TextBlock Grid.Row="2" Text="Password: "/>
        <TextBox Grid.Column="1" Grid.Row="1" Validation.Error="TextBox_Error">
            <TextBox.Text>
                <Binding Path="Login" NotifyOnValidationError="True" Mode="TwoWay" UpdateSourceTrigger="PropertyChanged" Delay="500">
                    <Binding.ValidationRules>
                        <local:ValidationString MinLength="3"/>
                        <ExceptionValidationRule/>
                    </Binding.ValidationRules>
                </Binding>
            </TextBox.Text>
        </TextBox>
        <TextBox Grid.Column="1" Grid.Row="2" Validation.Error="TextBox_Error">
                <TextBox.Text>
                <Binding Path="Password" NotifyOnValidationError="True" Mode="TwoWay" UpdateSourceTrigger="PropertyChanged" Delay="500">
                        <Binding.ValidationRules>
                            <local:ValidationString MinLength="5"/>
                            <ExceptionValidationRule/>
                        </Binding.ValidationRules>
                    </Binding>
                </TextBox.Text>
            </TextBox>
        <Button x:Name="generateLoginButton" Grid.Column="2" Grid.Row="1" Style="{StaticResource credentialGenerateButton}" Click="Generate_Click"/>
        <Button x:Name="generatePasswordButton" Grid.Column="2" Grid.Row="2" Style="{StaticResource credentialGenerateButton}" Click="Generate_Click"/>

        <Separator Grid.Row="3" Grid.ColumnSpan="4"/>

        <TextBlock Grid.Column="3" Grid.RowSpan="3" Text="{Binding ModelDescription}" Style="{StaticResource descriptionTextBox}"/>
    </Grid>
</UserControl>
