<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
                    xmlns:l="clr-namespace:TickTrader.BotTerminal">

    <ControlTemplate x:Key="PathInputTemplate.Classic">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <TextBox Grid.Column="0" Margin="0,0,5,0" Text="{Binding Path}"/>
            <Button Content="..."  Grid.Column="2" Margin="0">
                <i:Interaction.Behaviors>
                    <l:SaveFileDialogBeahvior FilePath="{Binding Path}" Filter="{Binding Filter}"/>
                </i:Interaction.Behaviors>
            </Button>
        </Grid>
    </ControlTemplate>

    <Style x:Key="PathInputViewStyle.Classic" TargetType="UserControl">
        <Setter Property="Template" Value="{StaticResource PathInputTemplate.Classic}"/>
    </Style>

</ResourceDictionary>