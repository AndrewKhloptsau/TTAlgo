<Window x:Class="TickTrader.Toaster.ToastWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TickTrader.Toaster"
        mc:Ignorable="d"
        Title="Window1"  SizeToContent="WidthAndHeight"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent">
    <Grid RenderTransformOrigin="0,1" Name="ToasterInstance">
        <ContentPresenter x:Name="ContentHolder" Content="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}, Path=Message}"></ContentPresenter>
    </Grid>
</Window>
