    <Protobuf Include="Requests\connection.management.proto" GrpcServices="Client" />
    <Protobuf Include="Requests\package.management.proto" GrpcServices="Client" />
    <Protobuf Include="Requests\plugin.files.management.proto" GrpcServices="Client" />
