<UserControl x:Class="TickTrader.BotAgent.Configurator.Controls.AdvancedPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TickTrader.BotAgent.Configurator.Controls"
             mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="0.4*"/>
        </Grid.ColumnDefinitions>

        <ComboBox Style="{StaticResource comboBoxStyle}" ItemsSource="{Binding AgentPaths}" SelectedValue="{Binding SelectPath}" SelectionChanged="ComboBox_SelectionChanged"/>
        <Button x:Name="restartAppButton" Style="{StaticResource advancedRestartAppButton}" Grid.Column="1" Content="Restart App" Click="RestartApplicationButton"/>
    </Grid>
</UserControl>
