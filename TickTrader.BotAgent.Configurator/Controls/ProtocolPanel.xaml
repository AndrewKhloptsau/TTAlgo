<UserControl x:Class="TickTrader.BotAgent.Configurator.Controls.ProtocolPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TickTrader.BotAgent.Configurator.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="250">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.7*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Listening Port: "/>
        <TextBlock Grid.Row="1" Text="Directory Name: "/>
        <TextBlock Grid.Row="2" Text="Log Message: "/>

        <TextBox Grid.Column="1" Grid.Row="0" Text="{Binding ListeningPort, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>
        <TextBox Grid.Column="1" Grid.Row="1" Text="{Binding DirectoryName, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>
        <CheckBox Grid.Column="1" Grid.Row="2" IsChecked="{Binding LogMessage, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" Style="{StaticResource checkBoxControlPanel}"/>
    </Grid>
</UserControl>
