<Application x:Class="TickTrader.BotTerminal.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:l="clr-namespace:TickTrader.BotTerminal">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                
                <!-- Caliburn bootstrapper-->
                <ResourceDictionary>
                    <l:AppBootstrapper x:Key="bootstrapper" />
                </ResourceDictionary>

                <!-- Control Styles -->
                <ResourceDictionary Source="Resx/Styles/ComboBoxStyle.xaml"/>
                <ResourceDictionary Source="Resx/Styles/ContextMenuStyle.xaml"/>
                <ResourceDictionary Source="Resx/Styles/MenuItemStyle.xaml"/>
                <ResourceDictionary Source="Resx/Styles/MenuStyle.xaml"/>
                <ResourceDictionary Source="Resx/Styles/ShadowPortalStyle.xaml"/>
                <ResourceDictionary Source="Resx/Styles/DataGridStyle.xaml"/>
                <ResourceDictionary Source="Resx/Styles/ExpanderStyle.xaml"/>
                <ResourceDictionary Source="Resx/Styles/ScrollViewerStyle.xaml"/>
                <ResourceDictionary Source="Resx/Styles/VerticalScrollBarStyle.xaml"/>
                <ResourceDictionary Source="Resx/Styles/ShellPanelStyle.xaml"/>
                <ResourceDictionary Source="Resx/Styles/ShellTabControlStyle.xaml"/>
                <ResourceDictionary Source="Resx/Styles/SymbolListBoxStyle.xaml"/>

                <!-- Themes -->
                <l:ThemeSelector>
                    <l:Theme Name="Dark">
                        <ResourceDictionary Source="Resx/Themes/Dark.xaml"/>
                    </l:Theme>
                    <l:Theme Name="Light">
                        <ResourceDictionary Source="Resx/Themes/Light.xaml"/>
                    </l:Theme>
                </l:ThemeSelector>

            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>

</Application>
