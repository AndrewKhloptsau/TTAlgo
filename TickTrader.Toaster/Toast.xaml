<Window x:Class="TickTrader.Toaster.Toast"
        x:ClassModifier="public"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TickTrader.Toaster"
        mc:Ignorable="d"
        Topmost="True"
        ShowActivated="False"
        ShowInTaskbar="False"
        Title="Toast"  SizeToContent="WidthAndHeight" Top="-100"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent">
    <Grid RenderTransformOrigin="0,1" Name="ToasterInstance">
        <ContentPresenter x:Name="ContentHolder" Content="{Binding Path=Message, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Window}}"/>
    </Grid>
</Window>
